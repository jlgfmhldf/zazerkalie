body
	font-family Arial,Helvetica,sans-serif
	color #000
	font-size 12px
	line-height 1.5

.text
	font-size 100%
	margin 10px 0

.link
	display inline
	color $blue
	cursor pointer
	text-decoration none

	&:hover
		color #333


strong
.bold
	font-weight bold

.hr
	border-top 1px solid #ccc
	height 1px

.warning
	color #ff0000