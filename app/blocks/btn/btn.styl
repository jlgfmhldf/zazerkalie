.btn
	display inline-block
	text-decoration none
	height 40px
	margin-bottom 3px
	border-radius 2px
	background-color $menuActive
	border 0
	transition-duration .8s
	padding 0 15px
	font-family $HelveticaBold

	&:hover
		background-color darken($menuActive, 5)

	&__text
		font-size 20px
		line-height 40px
		color lighten(grayscale($green), 40)

	&_style_green
		background-color $green

		&:hover
			background-color darken($green, 5)
