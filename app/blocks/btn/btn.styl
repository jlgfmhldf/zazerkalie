.btn
	width 100%
	height 46px
	margin-bottom 3px
	border-radius 5px
	border-top 2px solid  #00c9f3
	border-bottom 2px solid #0065B9
	border-left 0
	border-right 0
	background-image linear-gradient(to bottom, #00aaec 0%,#0073d1 100%) /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#00aaec+0,0073d1+100 */
	box-sizing border-box
	box-shadow 0 3px 3px rgba(#0073d1, 0.46)

	&:hover
		background linear-gradient(to bottom, #00abec 0%,#008ede 100%) /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#00abec+0,008ede+100 */

	&__text
		font-style italic
		text-decoration none
		text-transform uppercase
		color #fff
		font-size 15px
		line-height 45px
		letter-spacing 1.8px

	&_style_green
		border-top 2px solid  #6DAD46
		border-bottom 2px solid #498C39
		background-image linear-gradient(to bottom, #5fa844 0%,#45943c 100%)
		box-shadow 0 3px 3px rgba(#45943c, 0.46)

		&:hover
			background-image linear-gradient(to bottom, #5fa844 0%,#529e40 100%)
			border-bottom 1px solid #478b38
