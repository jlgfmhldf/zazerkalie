.contacts
	display table
	min-height 50px
	font-weight bold
	padding-left 60px
	background-image url(../images/phone.gif)
	background-repeat no-repeat
	background-position left center

	&__wrapper
		display table-cell
		vertical-align middle

	&__phone
		font-size 150%
		line-height 1.2
		color #000
		text-decoration none
		display block

	&__other
		text-decoration none
		color #000
		display block

	&__email
		color $blue
		text-decoration none

		&-text
			color #000
			text-decoration none

		&:hover
			color #000
