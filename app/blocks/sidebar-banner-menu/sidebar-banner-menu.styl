.sidebar-banner-menu
  background-color #f8f8f8
  padding 10px

  &__content
    padding 12px
    background-color #fff
    border 1px solid #DDD

  &__img-wrapper
    font-size 0
    line-height 0
    display block

  &__text
    display block
    text-transform uppercase
    font-family serif
    font-size 12px
    font-weight bold
    margin-top 4px

  &__item
    display block
    border 1px solid #DDD
    padding 4px
    margin-bottom 10px
    text-decoration none
    color #000

  &__img-wrapper[data-label]
    position relative
    overflow hidden

    &:before
      content attr(data-label)
      display block
      position absolute
      width 80px
      height 18px
      line-height 18px
      right 0
      top 0
      transform rotate(45deg) translate(23px, -8px)
      background #6dad46
      text-transform uppercase
      color #fff
      font-size 10px
      letter-spacing 0.07em
      text-align center
      z-index 2
