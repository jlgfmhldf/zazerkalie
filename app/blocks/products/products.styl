.products
	width 100%
	font-size 0
	align-justify()

	&__product
		display inline-block
		margin-bottom 10px
		background-color lighten($white, 4)
		text-align: center
		padding 10px
		width 205px
		min-height 255px
		cursor pointer
		box-shadow 1px 1px 4px rgba($menuActive, 0.47)
		text-decoration none
		transition background .4s ease-in-out

		&:hover
			box-shadow 1px 1px 8px rgba($menuActive, 0.47)


	&__text
		font-size 14px
		display block
		padding 5px
		line-height 20px
		text-align left
		text-align-last left
		color #000

	&__btn
		border 2px solid $blue
		padding 8px
		background-color transparent
		font-size 16px
		background-image linear-gradient(30deg, $green 50%, transparent 50%)
		background-position 100%
		background-size 400%
		transition all .4s ease-in-out
		text-decoration underline

		&:hover
			background-position 0
			color $white


