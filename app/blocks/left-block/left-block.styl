.left-block
  border-bottom 1px solid #ddd

  &:last-child
    border-bottom 0

  &__header
    position relative
    height 31px
    background-color #F8F8F8
    padding 0 20px

    &:after
      content ''
      display block
      width 100%
      height 1px
      position absolute
      bottom 0
      left -1px
      background #ddd


    &-text
      display inline-block
      height 31px
      position relative
      z-index 2
      padding 12px 25px 4px 0
      border-bottom 1px solid $blue
      color $blue
      letter-spacing 1px
      font-size 120%
      font-weight bold
      text-transform uppercase

  &__content
    padding-x 15px
    padding-y 10px

  &__item
    margin-bottom 20px
