.page
	width 980px
	margin auto
	padding-bottom 40px

	&__logo-and-contacts
		padding 30px 0 20px

	&__contacts
	&__logo
		vertical-align middle
		display inline-block

	&__logo
		width 20%

	&__contacts
		margin-left 50%


	&__slideshow
		padding 20px 0

	&__main
		width 70%
		vertical-align top

	&__main
	&__sidebar
		display table-cell

	&__sidebar
		width 30%
		box-shadow 5px 3px 5px rgba(1, 30, 131, 0.2)
		background-color darken($white, 4)

	&__main-content
		width 67%
		display table-cell
		border-left 1px solid #ddd
		//background-color lighten(invert($blue), 14)

	&__main-center
		width 33%
		display table-cell
		border 1px solid #ddd

	&__banner
		font-size 0
		line-height 0

	&__content-wrapper
		background-color $white
		border 1px solid #ddd
