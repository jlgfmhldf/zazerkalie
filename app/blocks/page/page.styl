.page
	width 1000px
	margin auto
	padding-bottom 40px

	&__logo-and-contacts
		padding 30px 0 20px

	&__contacts
	&__logo
		vertical-align middle
		display inline-block

	&__logo
		width 20%

	&__contacts
		margin-left 50%


	&__slideshow
		padding 20px 0

	&__main
		width 70%
		vertical-align top

	&__main
	&__sidebar
		display table-cell


	&__sidebar
		width 30%
		box-shadow 5px 3px 5px rgba($blue, 0.2)
		background-color darken($white, 4)

	&__main-content
		border-left 1px solid #ddd

	&__main-center
		width 33%
		display table-cell
		border 1px solid #ddd

	&__banner
		margin 10px 0
		font-size 0
		line-height 0

	&__content-wrapper
		background-color $white
		border 1px solid #ddd
		display table
		width 100%
