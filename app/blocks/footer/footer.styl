.footer
	margin-top 20px
	background-color #f6f6f6
	border-top 1px solid #ccc

	&__breadcrumbs
		padding-y 5px
		text-transform uppercase
		border-bottom 1px solid #ccc

		&-item
			position relative
			padding-x 2px
			padding-right 20px
			font-size 11px

		&-item:not(:last-child)

			&:hover
				background $blue
				color #fff

			&:after
				sprite $arrow
				position absolute
				content ''
				right 0
				top 0
				bottom 0
				margin auto
				transform rotate(-90deg)

	&__copyright
		display flex
		justify-content center
		align-items center
		padding 20px

	&__link
		margin-x 4px
		display block
		text-decoration none
		color #333
		transition-duration .25s
		transition-property color

		&:hover
			color #e74c3c

	&__logo
		display block
		height 14px
		width 58px
