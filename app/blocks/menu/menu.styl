.menu
	width 100%
	height 37px
	border-bottom 1px solid $menuBorderColor

	&__item
		height 100%
		font-size 0
		display inline-block
		vertical-align top
		position relative
		margin 0 10px 0 0
		padding 5px 10px 5px 12px
		cursor pointer

		&:before
			content ''
			sprite $arrow
			position absolute
			top 8px
			left 0

		&:after
			content ''
			position absolute
			bottom -1px
			left 0
			width 100%
			height 1px
			background-color $blue
			display none

		&-name
			font-size 12px
			line-height 14px
			color #858585
			font-weight bold

		&-descr
			font-size 11px
			line-height 1
			display block
			color #999
			font-weight normal

		&:hover &-descr
		&:hover &-name
		&_active &-descr
		&_active &-name
			color $blue

		&_active

			&:after
				display block

		&_empty
			padding 5px 10px 5px 0

			&:before
				display none

	&__link
		text-decoration none

	&__submenu
		display none
		width 200px
		padding 10px
		position absolute
		top 35px
		left 0
		border 1px solid #ddd
		background-color #fff

		&-item
			display block
			border-bottom 1px dotted #ddd
			color #666
			padding 5px 20px 5px 0
			font-size 12px
			cursor pointer

			&:hover
				color $blue

			&:last-child
				border none

	&__item:hover &__submenu
		display block
