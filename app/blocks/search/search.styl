.search
  padding 10px
  border-top 1px solid $grayBorder
  background-color $gray

  &__input
    display block
    size 100% 26px
    padding-left 5px
    padding-right 46px
    box-sizing border-box
    color #000
    +placeholder()
      color #000
    border 1px solid $grayBorder

  &__input-wrapper
    position relative

    &::after
      content ''
      display block
      position absolute
      right 16px
      top 0
      bottom 0
      margin auto
      sprite $search

    &::before
      content ''
      display block
      size 1px 14px
      position absolute
      right 36px
      top 0
      bottom 0
      margin auto
      background $grayBorder
